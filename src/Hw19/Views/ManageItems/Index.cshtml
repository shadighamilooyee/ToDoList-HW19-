@using App.Domain.Core.ItemAgg.Dtos
@using App.Domain.Core.ItemAgg.Entities
@using App.Domain.Core.ItemAgg.Enums
@using System.Globalization
@model GetAndSearchItemsViewModel
@{
    ViewData["Title"] = "لیست کارها";
    var orderitems = ViewBag.OrderItemsEnum;
    Layout = "";
}
<div class="table-header">
    <h2>@ViewData["Title"]</h2>
    <a asp-controller="ManageItems" asp-action="AddItem" class="add-btn">افزودن کار</a>
    <a asp-controller="Authentication" asp-action="Logout" class="logout-btn">خروج از حساب</a>
</div>


<div class="search-section">
    <form asp-action="Index" method="post">
        <input type="text" name="SearchedTitle" value="@Model.searchItemDto?.SearchedTitle" placeholder="جستجوی عنوان:" />
        <input type="text"  name="SearchedCategory" value="@Model.searchItemDto?.SearchedCategory" placeholder="جستجوی دسته‌بندی:" />
        @{
            var orderNames = new Dictionary<OrderItemsEnum, string>
                {
                { OrderItemsEnum.Title, "عنوان" },
                { OrderItemsEnum.IsDone, "وضعیت انجام" },
                { OrderItemsEnum.DueDate, "مهلت" }
                };
        }
        <select name="orderItems">
            <option value="">مرتب سازی</option>
            @foreach (var opt in orderNames)
            {
                <option value="@opt.Key">@opt.Value</option>
            }
        </select>
        <button type="submit">جستجو</button>
    </form>
</div>
<table class="item-table">
    <thead>
        <tr>
            <th>ایدی</th>
            <th>دسته بندی</th>
            <th>عنوان</th>
            <th>مهلت</th>
            <th>توضیحات</th>
            <th>وضعیت</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.userItemsDtos)
        {
            string status = "";
            if (item.IsDone)
            {
                status = "done";
            }
            else if (!item.IsDone && item.DueDate < DateTime.Now)
            {
                status = "overdue";
            }
            else
            {
                status = "pending";
            }
            <tr class="@status">
                <td>@item.Id</td>
                <td>@item.CategoryName</td>
                <td>@item.Title</td>
                <td>
                    @{
                        var pc = new PersianCalendar();
                        var year = pc.GetYear(item.DueDate);
                        var month = pc.GetMonth(item.DueDate).ToString("00");
                        var day = pc.GetDayOfMonth(item.DueDate).ToString("00");
                    }
                    @($"{year}/{month}/{day}")
                </td>
                <td>@(item.Description ?? "-")</td>
                <td class="actions">
                    <form asp-controller="ManageItems" asp-action="EditItem" method="post">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <button type="submit" class="edit-btn">  @(item.IsDone ? " انجام‌شده" : " انجام نشده")</button>
                    </form>

                    <form asp-controller="ManageItems" asp-action="DeleteItem" method="post">
                        <input type="hidden" name="itemId" value="@item.Id" />
                        <button type="submit" class="delete-btn"> حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<style>
    body {
        background-color: lavender;
    }

    .table-header {
        width: 90%;
        max-width: 1000px;
        margin: 30px auto 20px;
        gap: 20px;
        direction: rtl;
    }

        .table-header h2 {
            color: blueviolet;
            font-size: 24px;
            margin: 20px;
        }

    .search-section {
        direction: rtl;
        text-align: center;
    }

        .search-section input[type="text"],
        .search-section select {
            padding: 8px 10px;
            margin: 5px;
            border: 1px solid mediumslateblue;
            border-radius: 5px;
            font-size: 14px;
            width: 180px;
            box-sizing: border-box;
        }

            .search-section input[type="text"]:focus,
            .search-section select:focus {
                outline: none;
                border-color: slateblue;
            }

        .search-section button {
            padding: 8px 14px;
            background-color: mediumslateblue;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            transition: 0.2s;
        }

            .search-section button:hover {
                background-color: slateblue;
            }


    .item-table {
        width: 90%;
        max-width: 1000px;
        margin: 0 auto 50px;
        border-collapse: collapse;
        direction: rtl;
        text-align: center;
        background-color: snow;
        border-radius: 8px;
        overflow: hidden;
    }

        .item-table th, .item-table td {
            padding: 12px 15px;
            border-bottom: 1px solid white;
            font-size: 14px;
        }

        .item-table th {
            background-color: mediumslateblue;
            color: white;
        }

        .item-table tr.done {
            background-color: snow;
            color: slateblue !important;
        }

        .item-table tr.overdue {
            background-color: snow;
            color: tomato !important;
        }

        .item-table tr.pending {
            background-color: snow;
            color: deepskyblue !important;
        }

    .actions button {
        padding: 6px 12px;
        margin: 2px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 13px;
        transition: 0.2s;
    }

    .edit-btn {
        background-color: mediumslateblue;
        color: white;
    }

        .edit-btn:hover {
            background-color: mediumslateblue;
        }

    .delete-btn {
        background-color: darkred;
        color: white;
    }

        .delete-btn:hover {
            background-color: maroon;
        }

    .add-btn {
        background-color: mediumslateblue;
        color: white;
        text-decoration: none;
        padding: 10px 18px;
        border-radius: 6px;
        font-size: 14px;
        transition: 0.2s;
    }

        .add-btn:hover {
            background-color: slateblue;
        }

    .logout-btn {
        margin-right: 15px;
        color: mediumslateblue;
        text-decoration: none;
    }

</style>

